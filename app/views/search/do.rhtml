<% @results.each do |result| %>
	<% if result.main_picture %>
		<%= link_to image_tag(result.main_picture.public_filename(:thumb)), 
								:controller => "profiles", 
								:action => "show",
								:id => result.login %>
	<% end %>
	<%= link_to result.login, :controller => "profiles", 
														:action => "show",
														:id => result.login %>
<% end %>